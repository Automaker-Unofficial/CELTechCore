<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="scannerHolder" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" nodeOrientation="LEFT_TO_RIGHT" spacing="5.0" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TableView fx:id="scannedRoots" />
      <AnchorPane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
         <children>
            <VBox fx:id="connectPage" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="20.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label fx:id="incorrectPINLabel" text="%rootScanner.incorrectPIN" />
                  <VBox alignment="CENTER" fillWidth="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
                     <children>
                        <Label text="%rootScanner.enterPIN" />
                        <TextField fx:id="pinEntryField" prefColumnCount="10" />
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#connectToServer" text="%rootScanner.connect" />
                  <Button layoutX="26.0" layoutY="251.0" mnemonicParsing="false" onAction="#connectToServer" text="%rootScanner.forgotPIN" />
               </children>
            </VBox>
            <VBox fx:id="webViewHolder" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="42.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
            <HBox alignment="CENTER" layoutY="364.0" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
               <children>
                  <Button fx:id="disconnectButton" mnemonicParsing="false" onAction="#disconnectFromServer" text="%rootScanner.disconnect" />
               </children>
            </HBox>
            <VBox fx:id="wrongVersionBox" alignment="CENTER" spacing="5.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <Label fx:id="rootVersionLabel" />
                  <Button fx:id="rootUpdateButton" mnemonicParsing="false" onAction="#beginRootUpdate" text="%rootScanner.updateRoot" />
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</HBox>
