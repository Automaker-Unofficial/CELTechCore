<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import celtech.coreUI.components.*?>
<?import celtech.coreUI.components.buttons.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="container" style="-fx-background-color: black;" stylesheets="@../../css/JMetroDarkTheme.css" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="celtech.coreUI.controllers.MyMiniFactoryLoaderController">
    <children>
        <TopMenuStrip />        
        <HBox styleClass="inset-panel" VBox.vgrow="ALWAYS">
            <children>
                <VBox maxWidth="-Infinity" minWidth="-Infinity" prefWidth="30.0" style="-fx-background-color: black;" />
                <VBox fx:id="webContentContainer" minHeight="100.0" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <BorderPane maxHeight="-Infinity" minHeight="-Infinity" prefHeight="90.0" styleClass="menubar">
            <right>
                <HBox alignment="CENTER">
                    <children>
                        <GraphicButtonWithLabel fx:id="backwardButton" fxmlFileName="backwardButton" onAction="#backwardPressed" labelText="%buttonText.back" />
                        <GraphicButtonWithLabel fx:id="forwardButton" fxmlFileName="forwardButton" onAction="#forwardPressed" labelText="%buttonText.next" />
                    </children>
                    <BorderPane.margin>
                        <Insets right="10.0" />
                    </BorderPane.margin>
                </HBox>
            </right>
            <left>
                <HBox alignment="CENTER" spacing="5">
                    <children>
                        <GraphicButtonWithLabel fx:id="cancelButton" fxmlFileName="cancelButton" onAction="#cancelPressed" labelText="%buttonText.cancel"/>
                    </children>
                    <BorderPane.margin>
                        <Insets left="40.0" />
                    </BorderPane.margin>
                </HBox>
            </left>
            <center>
                <HBox alignment="CENTER">
                    <children>
                        <GraphicButtonWithLabel fx:id="addToProjectButton" fxmlFileName="addToProjectButton" onAction="#addToProjectPressed" labelText="%buttonText.addToProject"/>
                    </children>
                    <BorderPane.margin>
                        <Insets right="10.0" />
                    </BorderPane.margin>
                </HBox>
            </center>
        </BorderPane>
    </children>
</VBox>
