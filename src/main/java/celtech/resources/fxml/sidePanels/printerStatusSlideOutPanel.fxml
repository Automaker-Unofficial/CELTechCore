<?xml version="1.0" encoding="UTF-8"?>

<?import celtech.coreUI.components.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<HBox fx:id="slideout" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="370.0" styleClass="sidePanel_slideout" stylesheets="@../../css/JMetroDarkTheme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="celtech.coreUI.controllers.sidePanels.PrinterStatusSlideOutPanelController">
    <children>
        <VBox id="Container" fx:id="gcodeEditParent" spacing="10.0" HBox.hgrow="ALWAYS">
            <children>
                <VBox minWidth="0.0" spacing="5.0" VBox.vgrow="ALWAYS">
                    <children>
                        <TextArea fx:id="gcodeTranscript" minWidth="0.0" prefColumnCount="10" VBox.vgrow="ALWAYS">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </TextArea>
                        <HBox spacing="5.0">
                            <children>
                                <RestrictedTextField fx:id="gcodeEntryField" forceUpperCase="true" maxLength="50" minWidth="0.0" onAction="#sendGCodeA" prefColumnCount="5" restrict="A-Z0-9?. \-" HBox.hgrow="ALWAYS" />
                                <Button fx:id="sendGCodeButton" minWidth="0.0" mnemonicParsing="false" onAction="#sendGCodeA" text="%gcodeEntry.sendGCode" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" top="5.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
        <!--<fx:include fx:id="SlideOutHandle" source="SlideOutHandle.fxml" />-->
    </children>
</HBox>
