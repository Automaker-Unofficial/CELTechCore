<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <VBox.margin>
        <Insets left="30.0" />
    </VBox.margin>
    <left>
        <Label id="calibrationProgressLabel" text="HEATING..." BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets left="30.0" />
            </BorderPane.margin>
        </Label>
    </left>
    <right>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label id="calibrationProgressLegend" text="Target Temperature:" />
                <Label id="calibrationProgressValue" text="240C" />
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" right="30.0" top="5.0" />
            </BorderPane.margin>
        </VBox>
    </right>
    <center>
        <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </center>
</fx:root>
